<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.mobilepolicedevice.PersonInfoActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/blue"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/head"
            android:orientation="vertical" >

            <TextView
                android:id="@id/text_userstatus"
                android:layout_width="130.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginTop="6.0dip"
                android:gravity="center"
                android:text=" 用户状态"
                android:textColor="@color/darkblue"
                android:textSize="12.0sp" />
        </LinearLayout>

        <TextView
            android:id="@id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="5.0dip"
            android:text=" "
            android:textAppearance="?android:textAppearanceSmall" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3.0dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        style="@style/wrap_layout"
                        android:layout_width="222.0dip"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@id/textName"
                                android:layout_width="66.0dip"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="姓名"
                                android:textColor="#ff000000" />

                            <View style="@style/bg_line_vertical" />

                            <EditText
                                android:id="@id/editName"
                                android:layout_width="fill_parent"
                                android:layout_height="36.0dip"
                                android:layout_marginRight="2.0dip"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_border"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="12.0sp" />
                        </LinearLayout>

                        <View style="@style/bg_line_horizontal" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@id/textSex"
                                android:layout_width="66.0dip"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="性别 "
                                android:textColor="#ff000000" />

                            <View style="@style/bg_line_vertical" />

                            <EditText
                                android:id="@id/editSex"
                                android:layout_width="fill_parent"
                                android:layout_height="36.0dip"
                                android:layout_marginRight="2.0dip"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_border"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="12.0sp" />
                        </LinearLayout>

                        <View style="@style/bg_line_horizontal" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@id/textNation"
                                android:layout_width="66.0dip"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="民族 "
                                android:textColor="#ff000000" />

                            <View style="@style/bg_line_vertical" />

                            <EditText
                                android:id="@id/editNation"
                                android:layout_width="fill_parent"
                                android:layout_height="36.0dip"
                                android:layout_marginRight="2.0dip"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_border"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="12.0sp" />
                        </LinearLayout>

                        <View style="@style/bg_line_horizontal" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@id/textBirth"
                                android:layout_width="66.0dip"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="生日"
                                android:textColor="#ff000000" />

                            <View style="@style/bg_line_vertical" />

                            <EditText
                                android:id="@id/editBirth"
                                android:layout_width="fill_parent"
                                android:layout_height="36.0dip"
                                android:layout_marginRight="2.0dip"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_border"
                                android:ems="10"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="12.0sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2.0dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/imageId"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/bg_border" />

                        <Button
                            android:id="@+id/btnInfo"
                            android:layout_width="3.0dip"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/textView5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </LinearLayout>

                <LinearLayout
                    style="@style/wrap_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="36dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/textID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  身份证号 "
                            android:textColor="#ff000000" />

                        <View style="@style/bg_line_vertical" />

                        <EditText
                            android:id="@id/editId"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="2.0dip"
                            android:layout_weight="0.65"
                            android:background="@drawable/bg_border"
                            android:digits="0123456789xyzXYZ"
                            android:ems="10"
                            android:inputType="number"
                            android:textSize="12.0sp" />

                        <Button
                            android:id="@id/btn_handSearch"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="38.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="3.0dip"
                            android:background="@drawable/selector_handsearch_btn" />
                    </LinearLayout>

                    <View style="@style/bg_line_horizontal" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/textAddr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  证件地址 "
                            android:textColor="#ff000000" />

                        <View style="@style/bg_line_vertical" />

                        <EditText
                            android:id="@id/editAddr"
                            android:layout_width="fill_parent"
                            android:layout_height="36.0dip"
                            android:layout_marginRight="2.0dip"
                            android:layout_weight="0.98"
                            android:background="@drawable/bg_border"
                            android:ems="10"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="12.0sp" />
                    </LinearLayout>

                    <View style="@style/bg_line_horizontal" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/textOffice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  发证机关 "
                            android:textColor="#ff000000" />

                        <View style="@style/bg_line_vertical" />

                        <EditText
                            android:id="@id/editOffice"
                            android:layout_width="fill_parent"
                            android:layout_height="36.0dip"
                            android:layout_marginRight="2.0dip"
                            android:layout_weight="0.98"
                            android:background="@drawable/bg_border"
                            android:ems="10"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="12.0sp" />
                    </LinearLayout>

                    <View style="@style/bg_line_horizontal" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  有效期限 "
                            android:textColor="#ff000000" />

                        <View style="@style/bg_line_vertical" />

                        <EditText
                            android:id="@id/expDate"
                            android:layout_width="fill_parent"
                            android:layout_height="36.0dip"
                            android:layout_marginRight="2.0dip"
                            android:layout_weight="0.98"
                            android:background="@drawable/bg_border"
                            android:ems="10"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="12.0sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@id/textView10"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:text=" " />

            <ScrollView
                android:id="@+id/svPersonInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp" >

                    <LinearLayout
                        style="@style/wrap_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/Llyt_NoEscaped"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.17"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/norecord" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="无记录"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />
                            <View style="@style/bg_line_horizontal" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Llyt_Escaped"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.17"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@id/TextView01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="  人员分类 "
                                    android:textColor="#ff000000"
                                    android:textSize="14.0sp" />

                                <View style="@style/bg_line_vertical" />

                                <EditText
                                    android:id="@+id/editPersonTypeShow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="40.0dip"
                                    android:background="@drawable/bg_border"
                                    android:ems="10"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:gravity="left|center_vertical"
                                    android:textColor="@color/brown"
                                    android:textSize="14.0sp" />
                            </LinearLayout>

                            <View style="@style/bg_line_horizontal" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" >

                                    <TextView
                                        android:id="@id/TextView01"
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:gravity="center"
                                        android:text="  立案时间 "
                                        android:textColor="#ff000000"
                                        android:textSize="14.0sp" />

                                    <View style="@style/bg_line_vertical" />

                                    <EditText
                                        android:id="@+id/editZJLASJShow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40.0dip"
                                        android:background="@drawable/bg_border"
                                        android:ems="10"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:gravity="left|center_vertical"
                                        android:textColor="@color/brown"
                                        android:textSize="14.0sp" />
                                </LinearLayout>

                                <View style="@style/bg_line_vertical" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" >

                                    <TextView
                                        android:id="@id/TextView01"
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:gravity="center"
                                        android:text="  入库时间 "
                                        android:textColor="#ff000000"
                                        android:textSize="14.0sp" />

                                    <View style="@style/bg_line_vertical" />

                                    <EditText
                                        android:id="@+id/editNRBJZDRYKSJShow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40.0dip"
                                        android:background="@drawable/bg_border"
                                        android:ems="10"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:gravity="left|center_vertical"
                                        android:textColor="@color/brown"
                                        android:textSize="14.0sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <View style="@style/bg_line_horizontal" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@id/TextView01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="  立案单位 "
                                    android:textColor="#ff000000"
                                    android:textSize="14.0sp" />

                                <View style="@style/bg_line_vertical" />

                                <EditText
                                    android:id="@+id/editLADWShow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="40.0dip"
                                    android:background="@drawable/bg_border"
                                    android:ems="10"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:gravity="left|center_vertical"
                                    android:textColor="@color/brown"
                                    android:textSize="14.0sp" />
                            </LinearLayout>

                            <View style="@style/bg_line_horizontal" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@id/TextView01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="  现居住地 "
                                    android:textColor="#ff000000"
                                    android:textSize="14.0sp" />

                                <View style="@style/bg_line_vertical" />

                                <EditText
                                    android:id="@+id/editXZDXZShow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="40.0dip"
                                    android:background="@drawable/bg_border"
                                    android:ems="10"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:gravity="left|center_vertical"
                                    android:textColor="@color/brown"
                                    android:textSize="14.0sp" />
                            </LinearLayout>

                            <View style="@style/bg_line_horizontal" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@id/TextView01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="  户籍地址 "
                                    android:textColor="#ff000000"
                                    android:textSize="14.0sp" />

                                <View style="@style/bg_line_vertical" />

                                <EditText
                                    android:id="@+id/editHJDXZShow"
                                    android:layout_width="fill_parent"
                                    android:layout_height="40.0dip"
                                    android:background="@drawable/bg_border"
                                    android:ems="10"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:gravity="left|center_vertical"
                                    android:textColor="@color/brown"
                                    android:textSize="14.0sp" />
                            </LinearLayout>
                            <View style="@style/bg_line_horizontal" />
                        </LinearLayout>

                        

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="52.0dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@id/textView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="  搜查 \n  区域 "
                                    android:textColor="#ff000000"
                                    android:textSize="12.0sp" />

                                <Button
                                    android:id="@id/btnAreaSelec"
                                    android:layout_width="80.0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="3.0dip"
                                    android:layout_marginRight="3.0dip"
                                    android:gravity="center"
                                    android:text="搜查区域"
                                    android:textSize="10.0sp" />

                                <TextView
                                    android:id="@id/textView12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="搜查\n地点"
                                    android:textColor="#ff000000"
                                    android:textSize="12.0sp" />

                                <Button
                                    android:id="@id/btnPlaceSelec"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="3.0dip"
                                    android:layout_marginRight="3.0dip"
                                    android:gravity="center"
                                    android:text="搜查地点选择"
                                    android:textSize="10.0sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>